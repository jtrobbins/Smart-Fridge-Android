<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/iconTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text = "Icon"/>

    <ImageButton
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src ="@drawable/ic_shopping_list_icon"
        android:background="@drawable/selector"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:state_selected="true"
        app:layout_constraintTop_toBottomOf="@id/iconTitle"
        app:layout_constraintRight_toLeftOf="@id/icon2"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        app:tint="#3498db" />

    <ImageButton
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src ="@drawable/ic_shopping_list_icon"
        android:background="@drawable/selector"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/iconTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:tint="#3498db" />

    <ImageButton
        android:id="@+id/icon3"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src ="@drawable/ic_shopping_list_icon"
        android:background="@drawable/selector"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/iconTitle"
        app:layout_constraintLeft_toRightOf="@id/icon2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        app:tint="#3498db" />

    <ImageButton
        android:id="@+id/icon4"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src ="@drawable/ic_shopping_list_icon"
        android:background="@drawable/selector"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/icon1"
        app:layout_constraintRight_toLeftOf="@id/icon5"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        app:tint="#3498db" />

    <ImageButton
        android:id="@+id/icon5"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src ="@drawable/ic_shopping_list_icon"
        android:background="@drawable/selector"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/icon1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:tint="#3498db" />

    <ImageButton
        android:id="@+id/icon6"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src ="@drawable/ic_shopping_list_icon"
        android:background="@drawable/selector"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/icon1"
        app:layout_constraintLeft_toRightOf="@id/icon5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:tint="#3498db" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/icon4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text = "Title"/>

    <EditText
        android:id="@+id/shopping_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="Enter Title"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/shopping_list_title"
        android:text="Cancel" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopping_list_title"
        android:text="Reset" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/shopping_list_title"
        android:text="Submit" />


</androidx.constraintlayout.widget.ConstraintLayout>